{
  "name": "browser-autos-api",
  "version": "1.0.0",
  "description": "Browser automation CDP API service based on Chromium",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "browser",
    "automation",
    "cdp",
    "puppeteer",
    "playwright",
    "headless",
    "chrome"
  ],
  "author": "Browser.autos",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.0.0",
    "@fastify/swagger-ui": "^4.0.0",
    "@fastify/websocket": "^10.0.1",
    "bull": "^4.16.3",
    "dotenv": "^16.4.7",
    "fastify": "^4.28.1",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.5.0",
    "pino-pretty": "^11.2.2",
    "playwright": "^1.56.0",
    "prom-client": "^15.1.3",
    "puppeteer-core": "^23.10.4",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
