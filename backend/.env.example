# 服务配置
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# 认证配置
JWT_SECRET=your-secret-key-change-this-in-production
TOKEN_EXPIRY=30d
REQUIRE_AUTH=true  # 是否要求 API 认证（开发环境可设为 false）

# Chrome 配置
MAX_CONCURRENT_SESSIONS=10
SESSION_TIMEOUT=300000
MAX_SESSION_DURATION=3600000
CHROME_EXECUTABLE_PATH=/usr/bin/chromium

# 浏览器池配置
BROWSER_POOL_MIN=2
BROWSER_POOL_MAX=10
BROWSER_MAX_AGE=3600000

# 队列配置（可选 - 需要 Redis）
ENABLE_QUEUE=false  # 是否启用队列功能
REDIS_URL=redis://localhost:6379
QUEUE_NAME=browser-tasks
QUEUE_MAX_CONCURRENT=5
QUEUE_TIMEOUT=120000
QUEUE_RETRIES=3

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 资源限制
MAX_MEMORY_PER_BROWSER=512
MAX_CPU_PER_BROWSER=50

# 速率限制
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# CORS 配置
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true
