# Browser.autos Production Environment Configuration

# ============================================================================
# Service Configuration
# ============================================================================
NODE_ENV=production
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info

# ============================================================================
# Authentication Configuration
# ============================================================================
# IMPORTANT: Change this to a secure random string in production!
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION
TOKEN_EXPIRY=30d

# ============================================================================
# Chrome Configuration
# ============================================================================
MAX_CONCURRENT_SESSIONS=10
SESSION_TIMEOUT=300000
MAX_SESSION_DURATION=3600000

# ============================================================================
# Browser Pool Configuration
# ============================================================================
BROWSER_POOL_MIN=2
BROWSER_POOL_MAX=10
BROWSER_MAX_AGE=3600000

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================================================
# Queue Configuration
# ============================================================================
QUEUE_NAME=browser-tasks
QUEUE_MAX_CONCURRENT=5
QUEUE_TIMEOUT=120000
QUEUE_RETRIES=3

# ============================================================================
# Monitoring Configuration
# ============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=15d

# ============================================================================
# Grafana Configuration
# ============================================================================
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ============================================================================
# Resource Limits
# ============================================================================
MAX_MEMORY_PER_BROWSER=512
MAX_CPU_PER_BROWSER=50

# API Container Resource Limits
API_CPU_LIMIT=2
API_MEMORY_LIMIT=2G
API_CPU_RESERVATION=0.5
API_MEMORY_RESERVATION=512M

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGIN=*
CORS_CREDENTIALS=true
